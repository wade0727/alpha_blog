<h1 align="center">All users</h1>
<div align="center">
  <div align="center">
    <%= will_paginate %>
  </div>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%=link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "PDR") if user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <div align="center">
    <%= will_paginate %>
  </div>
</div>