<div class="well">
  <div class="page-header">
    <h1 align="center">All users</h1>
  </div>
    <div align="center">
      <div align="center">
        <%= will_paginate %>
      </div>
      <% @users.each do |user| %>
        <ul class="listing">
          <div class="row">
            <div class="box-users">
              <div class="">
                <li><%=link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title">
                  <%= link_to user.username, user_path(user) %>
                </li>
                <li><small><%= pluralize(user.articles.count, "PDR") if user.articles %></small></li>
                <% if logged_in? and current_user.admin? %>
                <li><%= link_to user_path(user), class: "btn btn-xs btn-danger", method: :delete,
                    data: { confirm: "Are you sure you want to delete the user and all their PDRs?" } do %>
                    <i class="fa fa-trash"></i>
                    Delete this user
                    <% end %>
                </li>
              <% end %>
              </div>
            </div>
          </div>
        </ul>
      <% end %>
      <div align="center">
        <%= will_paginate %>
      </div>
    </div>
</div>