<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="well">
    <div class="page-header">
      <h1 align="center">Edit category</h1>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :name %>
      </div>
      
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-xs btn-success' %>
        <%= link_to "Discard Changes", articles_path, class: 'btn btn-xs btn-warning' %>
      </div>
    </div>
      <% end %>
  </div>