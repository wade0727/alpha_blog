<div class="well">
  <h1 class="text-center">Index of Plant Damage Reports</h1>
  <p><%= link_to "Add New PDR", new_article_path, class: "btn btn-success" %></p>
  
  <table class="table">
    <tr>
      <th>Job Number</th>
      <th>Node</th>
      <th>Street</th>
      <th>Zip Code</th>
      <th>Damage Repair Notations</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.node %></td>
      <td><%= article.street %></td>
      <td><%= article.zip %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-info btn-sm" %></td>
      <td><%= link_to 'Show', article_path(article), class: "btn btn-primary btn-sm" %></td>
      <td><%= link_to 'Delete', article_path(article), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
</div>
  <% end %>
  
</table>

