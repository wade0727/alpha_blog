<div class="well">
  <h1 align="center">Plant Damage Reports</h1>
  
  
  <table class="table table-striped">
    <tr>
      <th>Job Number</th>
      <th>Node</th>
      <th>Street</th>
      <th>Zip Code</th>
      <th>Damage Repair Notations</th>
      <th>Created By</th>
      <th>Date Created</th>
    </tr>
    
<% @articles.each do |article| %>
    
    <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.node %></td>
      <td><%= article.street %></td>
      <td><%= article.zip %></td>
      <td><%= truncate(article.description, length: 30) %></td>
      <td><%= article.user.username if article.user %></td>
      <td><%= article.created_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
    </tr>
<% end %>
  </table>
</div>
  
  


